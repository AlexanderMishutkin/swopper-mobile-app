<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.add_advert.AddImageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_image_next_button">
        <TextView
            android:id="@+id/add_image_input_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text"
            android:textColor="@color/colorMainText"
            android:textStyle="bold"
            android:text="Добавьте фотографию"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/add_image_hint_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_padding"
            android:paddingEnd="@dimen/text_padding"
            android:layout_marginTop="@dimen/app_half_margin"
            android:textSize="@dimen/small_text"
            android:textColor="@color/colorSecondText"
            android:text="Пользователи чаще откликаются на объявления с фотографией хорошего качества, которая полностью показывает предлагаемый товар или услугу"
            android:gravity="center"
            android:singleLine="false"
            app:layout_constraintTop_toBottomOf="@id/add_image_input_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/add_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/app_double_margin"
            android:src="@drawable/im_add_image"
            android:clickable="true"
            android:focusable="true"
            app:siRadius="10dp"
            app:siBorderWidth="0dp"
            app:siSquare="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_image_hint_label"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/add_image_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:backgroundTint="@color/colorButton"
        android:textColor="@color/colorPrimary"
        android:radius="10dp"
        android:textAllCaps="false"
        android:text="Опубликовать"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>